@model List<Department>

<h1>Hello It's Our Student List Page</h1>

<div class="container">

    <div class="row">
        <div class="col-6">
            <h2 class="diplay-3">Student List</h2>
        </div>
        <div class="col-6 align-content-center text-end">
            <a asp-controller="Department" asp-action="Create" class="w-50 btn btn-outline-primary form-control ">Create</a>
        </div>
    </div>
 

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Department Name</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var department in Model){
            <tr>
                <th scope="row">@department.Depart</th>
                <th>
                    <div>
                        <a asp-controller="Department" asp-route-id="@department.Id" asp-action="Edit" class="btn btn-primary">Edit </a>
                        <a asp-controller="Department" asp-route-id="@department.Id" asp-action="Delete" class="btn btn-danger">Delete </a>

                    </div>
                </th>
             </tr>
             }

        </tbody>
    </table>
</div>